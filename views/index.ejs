<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Odin mini message board</title>
    <link rel="icon" type="image/svg+xml" href="/odin-icon.svg" />
    <link rel="stylesheet" href="/css/output.css" />
  </head>
  <body>
    <div
      class="h-full min-h-screen font-custom dark:bg-slate-900 bg-blue-50 items-center flex flex-col"
    >
      <div class="flex flex-col gap-4 w-full max-w-screen-sm p-4">
        <%- include('header') %>
        <ul class="flex flex-col gap-4">
          <% messages.forEach((message, index) => { %>
          <a href="/messages/<%= message.id %>"
            class="bg-white dark:bg-blue-950 p-4 flex flex-col gap-2 rounded-md"
            key="<%= index %>"
          >
            <div class="flex gap-4">
              <span class="dark:text-white"><%= message.user %></span>
              <span class="text-gray-500 dark:text-slate-400"
                ><%= message.added.toLocaleString(2) %></span
              >
            </div>
            <span class="text-gray-500 dark:text-slate-400"
              ><%= message.text %></span
            >
          </a>
          <% }); %>
        </ul>
        <a
          href="/new"
          class="bg-blue-600 rounded-md flex justify-center hover:bg-opacity-60 transition-colors duration-300 ease-in-out text-white py-3 uppercase"
          >New message</a
        >
      </div>
    </div>
  </body>
</html>
