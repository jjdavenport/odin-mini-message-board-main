<%- include('doctype') %>
<body>
  <div class="h-full min-h-screen font-custom dark:bg-slate-900 bg-blue-50 items-center flex flex-col">
    <div class="flex flex-col gap-4 w-full max-w-screen-sm p-4">
        <%- include("search-header") %>
      <% if (search && search.length > 0) { %>
        <ul class="flex flex-col gap-4">
          <% search.forEach((message, index) => { %>
            <a href="/messages/<%= message.id %>"
              class="bg-white dark:bg-blue-950 p-4 flex flex-col gap-2 rounded-md"
              key="<%= index %>"
            >
              <div class="flex gap-4">
                <span class="dark:text-white"><%= message.user %></span>
                <span class="text-gray-500 dark:text-slate-400">
                  <%= message.added.toLocaleString() %>
                </span>
              </div>
              <span class="text-gray-500 dark:text-slate-400">
                <%= message.text %>
              </span>
            </a>
          <% }); %>
        </ul>
      <% } else { %>
        <div class="bg-white dark:bg-blue-950 p-4 rounded-md text-center">
          <p class="text-gray-500 dark:text-slate-400">
            No messages found
          </p>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
